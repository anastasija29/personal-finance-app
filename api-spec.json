    "/transactions/{id}": {
      "patch": {
        "summary": "Update transaction category",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "category": { "type": "string" },
                  "subcategory": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Transaction updated",
            "content": {
              "application/json": {
                "examples": {
                  "updated": {
                    "value": {
                      "id": 1,
                      "category": "Shopping",
                      "subcategory": "Clothing"
                    }
